<?xml version="1.0"?>
<data>
    <xpath expr="/form/notebook/page[@id=&quot;shipments&quot;]" position="after">
        <page string="UPS" states="{'invisible': Not(Bool(Eval('is_ups_shipping')))}" id="ups">
            <label name="is_ups_shipping"/>
            <field name="is_ups_shipping"/>
            <newline/>
            <label name="ups_service_type"/>
            <field name="ups_service_type" colspan="3" widget="selection"/>

            <label name="ups_package_type"/>
            <field name="ups_package_type" colspan="3"/>
            <newline/>
            <button name="update_ups_shipment_cost" string="Update Shipment Cost"/>
        </page>
    </xpath>
</data>
